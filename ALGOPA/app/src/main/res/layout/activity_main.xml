<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#020202"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text1"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:backgroundTint="#0C0C0C"
            android:fontFamily="@font/kaushan"
            android:gravity="top"
            android:text="Point shop"
            android:textColor="#A9A8BC"
            android:textColorHighlight="#A9A8BC"
            android:textColorHint="#A9A8BC"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ca1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="55dp"
                android:layout_weight="1"
                android:src="@drawable/ri1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"
                android:text="Birthday" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="65dp"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"
                android:layout_weight="1"
                android:text="Small luxury" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@drawable/p1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="55dp"
                android:layout_weight="1"
                android:src="@drawable/g1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_weight="1"
                android:text="Light gift"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="65dp"
                android:layout_weight="1"
                android:text="Gift card"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@drawable/b1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="55dp"
                android:layout_weight="1"
                android:src="@drawable/jyp1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_weight="1"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"
                android:text="Health/Recovery" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="65dp"
                android:layout_weight="1"
                android:fontFamily="@font/kaushan"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#A9A8BC"
                android:text="Useless gift" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>